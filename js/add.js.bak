        checkWeight();  
    }

    if (width.parentNode.parentNode.parentNode.classList.contains('hide') === true) {
        width_valid = true;  
    } else {
        checkWidth();
    }

    if (height.parentNode.parentNode.parentNode.classList.contains('hide') === true) {
        height_valid = true;  
    } else {
        checkHeight();
    }

    if (length.parentNode.parentNode.parentNode.classList.contains('hide') === true) {
        length_valid = true;  
